{
    "version": "1.0.0",
    "description": "Dynamic Test Suite Configuration",
    "defaultSettings": {
        "testCount": 10,
        "stressMode": false,
        "fuzzMode": false,
        "timeout": 30000,
        "parallelExecution": false
    },
    "testCategories": {
        "arithmetic": {
            "enabled": true,
            "weight": 15,
            "edgeCases": [
                "overflow",
                "underflow",
                "division_by_zero",
                "float_precision"
            ]
        },
        "strings": {
            "enabled": true,
            "weight": 15,
            "edgeCases": [
                "empty",
                "unicode",
                "special_chars",
                "very_long",
                "null_bytes"
            ]
        },
        "dataStructures": {
            "enabled": true,
            "weight": 20,
            "edgeCases": [
                "empty_collection",
                "single_element",
                "large_collection",
                "nested"
            ]
        },
        "memory": {
            "enabled": true,
            "weight": 10,
            "edgeCases": [
                "allocation_failure",
                "large_allocation",
                "fragmentation"
            ]
        },
        "io": {
            "enabled": true,
            "weight": 10,
            "edgeCases": [
                "file_not_found",
                "permission_denied",
                "large_file"
            ]
        },
        "concurrency": {
            "enabled": true,
            "weight": 15,
            "edgeCases": [
                "race_condition",
                "deadlock",
                "thread_safety"
            ]
        },
        "boundary": {
            "enabled": true,
            "weight": 15,
            "edgeCases": [
                "min_value",
                "max_value",
                "off_by_one",
                "negative_index"
            ]
        }
    },
    "languageSettings": {
        "python": {
            "enabled": true,
            "command": "python",
            "fileExtension": ".py",
            "additionalCategories": [
                "generators",
                "decorators",
                "comprehensions"
            ]
        },
        "c": {
            "enabled": true,
            "compiler": "gcc",
            "flags": [
                "-Wall",
                "-Wextra",
                "-O2"
            ],
            "fileExtension": ".c",
            "additionalCategories": [
                "pointers",
                "memory_management",
                "buffer_overflow"
            ]
        },
        "cpp": {
            "enabled": true,
            "compiler": "g++",
            "flags": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2"
            ],
            "fileExtension": ".cpp",
            "additionalCategories": [
                "templates",
                "stl",
                "smart_pointers",
                "raii"
            ]
        },
        "java": {
            "enabled": true,
            "compiler": "javac",
            "runtime": "java",
            "fileExtension": ".java",
            "additionalCategories": [
                "generics",
                "streams",
                "exceptions",
                "garbage_collection"
            ]
        }
    },
    "stressTestSettings": {
        "iterations": 1000,
        "dataSize": 100000,
        "threadCount": 4,
        "memoryLimit": "512MB"
    },
    "fuzzTestSettings": {
        "iterations": 500,
        "minInputLength": 0,
        "maxInputLength": 10000,
        "charSets": [
            "ascii",
            "unicode",
            "binary"
        ]
    },
    "reporting": {
        "generateHtml": true,
        "generateJson": true,
        "saveToFile": true,
        "showDetails": true,
        "colorOutput": true
    }
}